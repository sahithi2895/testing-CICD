  "item": [
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "let response = pm.response.json();",
              "",
              "pm.environment.set('Authorization', response.data.Authorization);",
              "pm.environment.set('org_uuid', response.data.org_uuid);",
              "pm.environment.set('user_uuid', response.data.user_uuid);",
              "pm.environment.set('role_uuid', response.data.role_uuid);",
              "",
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has required top level keys', function () {",
              "    pm.expect(response).to.have.property('success');",
              "    pm.expect(response).to.have.property('message');",
              "    pm.expect(response).to.have.property('data');",
              "    pm.expect(response).to.have.property('status_code');",
              "});",
              "",
              "pm.test('All login data fields exist', function () {",
              "    let data = response.data;",
              "    pm.expect(data).to.have.property('Authorization');",
              "    pm.expect(data).to.have.property('email');",
              "    pm.expect(data).to.have.property('last_login_time');",
              "    pm.expect(data).to.have.property('mobile_number');",
              "    pm.expect(data).to.have.property('name');",
              "    pm.expect(data).to.have.property('org_uuid');",
              "    pm.expect(data).to.have.property('role_name');",
              "    pm.expect(data).to.have.property('role_uuid');",
              "    pm.expect(data).to.have.property('user_uuid');",
              "    pm.expect(data).to.have.property('show_user_guide');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"loginId\": \"sahithi.b@smartbots.ai\",\n  \"password\": \"Sahithi@123\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "https://devbackend.smartbots.us/identity/auth/login",
          "protocol": "https",
          "host": ["devbackend", "smartbots", "us"],
          "path": ["identity", "auth", "login"]
        }
      }
    },
    {
      "name": "view org details",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "let response = pm.response.json();",
              "",
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response contain top level keys', function () {",
              "    pm.expect(response).to.have.keys('success', 'message', 'data', 'status_code');",
              "});",
              "",
              "pm.test('Data contain all data fields', function () {",
              "    let data = response.data;",
              "    pm.expect(data).to.have.property('org_uuid');",
              "    pm.expect(data).to.have.property('orgname');",
              "    pm.expect(data).to.have.property('country');",
              "});"
            ]
          }
        }
      ],
